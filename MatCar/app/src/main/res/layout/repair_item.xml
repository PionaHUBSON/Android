<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_background"
    app:cardCornerRadius="15dp"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"

        android:layout_margin="0dp"
        android:background="@drawable/main_click_selected7"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"

            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/repair_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Amortyzatory"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="26sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical"
                android:padding="3dp">


                <TextView
                    android:id="@+id/repair_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="150-300 PLN"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:background="@drawable/main_click_selected"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/repair_photo"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:paddingTop="6dp"

                    android:paddingBottom="12dp">

                </ImageView>

                <TextView
                    android:id="@+id/repair_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/main_click_selected"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Amortyzator to mechanizm, którego zadaniem jest przechwycić i rozproszyć nadmiar energii w układzie mechanicznym."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="19sp"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"

                android:padding="3dp">

                <Button
                    android:id="@+id/repair_add_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"


                    android:background="@drawable/button_click7"
                    android:text="+"

                    android:textSize="36sp">

                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>