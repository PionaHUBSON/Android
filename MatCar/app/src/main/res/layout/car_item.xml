<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="15dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="8dp"
        android:textAlignment="center"

        >

        <TextView
            android:id="@+id/car_item_brand2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Mateusz"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="18dp">


        </TextView>

        <TextView
            android:id="@+id/car_item_model2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_item_brand2"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="ASD"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/car_item_year2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_item_model2"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Telefon: 726914491"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="18dp">


        </TextView>

        <TextView
            android:id="@+id/car_item_vin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_item_year2"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Email: mateusz.krawczyk.3@gmail.com"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="18dp">


        </TextView>


        <Button

            android:id="@+id/btn_choose_mechanic"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/car_item_vin2"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/button_click"
            android:gravity="center"
            android:padding="0dp"

            android:text="Wybierz"></Button>
    </RelativeLayout>
</androidx.cardview.widget.CardView>