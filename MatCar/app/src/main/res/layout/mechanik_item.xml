<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/rounded_background_white"
    app:cardCornerRadius="15dp"

    >

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background_white"
        android:gravity="center"
        android:padding="16dp"
        android:textAlignment="center"

        >

        <TextView
            android:id="@+id/diagnostic_mechanic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="Mateusz"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darkgray"
            android:textSize="18dp">


        </TextView>

        <TextView
            android:id="@+id/diagnostic_mechanic_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagnostic_mechanic_name"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darkgray"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/diagnostic_mechanic_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagnostic_mechanic_name"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="Telefon: 726914491"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darkgray"
            android:textSize="18dp">


        </TextView>

        <TextView
            android:id="@+id/diagnostic_mechanic_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagnostic_mechanic_phone_number"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Email: mateusz.krawczyk.3@gmail.com"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darkgray"
            android:textSize="18dp">


        </TextView>

        <TextView
            android:id="@+id/diagnostic_mechanic_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagnostic_mechanic_email"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="Opis: Właściciel firmy i najlepszy mechanik"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darkgray"
            android:textSize="18dp">


        </TextView>

        <TextView
            android:id="@+id/diagnostic_mechanic_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/diagnostic_mechanic_description"
            android:text=""

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white">


        </TextView>

        <Button

            android:id="@+id/btn_choose_mechanic"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/diagnostic_mechanic_description"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_click7"
            android:gravity="center"
            android:padding="0dp"

            android:text="Wybierz"></Button>
    </RelativeLayout>
</androidx.cardview.widget.CardView>