<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpizza"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#00B81212"
                    android:foreground="#ec3e3e"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="#ec3e3e"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="16dp"
                    android:background="#ffffff"
                    android:foregroundGravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/view2"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="2dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="12dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/view3"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="410dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingLeft="8dp"
                    android:text="Tasty Pizza"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="italic"
                    android:typeface="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="103dp"
                    android:layout_height="117dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/yallayallalogo"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintTop_toTopOf="@+id/view3" />

                <ImageView
                    android:id="@+id/LogButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:background="#ec3e3f"
                    android:baselineAlignBottom="false"
                    android:clickable="true"
                    android:cropToPadding="true"
                    android:foregroundGravity="right"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    app:srcCompat="@drawable/icons8user96" />

                <TextView
                    android:id="@+id/min_price_res"
                    android:layout_width="92sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="55,00 zł"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="92sp"
                    android:layout_height="25dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center_horizontal"
                    android:text="Min Price"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/delivert_cost_res"
                    android:layout_width="92.5sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="7,00 zł"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="93dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="140dp"
                    android:gravity="center_horizontal"
                    android:text="Delivery Cost"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/name_res"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Yalla Yalla"
                    android:textSize="25dp"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toTopOf="@+id/view3" />

                <TextView
                    android:id="@+id/street_res"
                    android:layout_width="250dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_horizontal|top"
                    android:text="Struga 5, 90-420 Łódź"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toBottomOf="@+id/NameOfRestaurant" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Choose the restaurant"
                    android:textColor="#FCF9F9"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view2"
                    app:layout_constraintEnd_toEndOf="@+id/view2"
                    app:layout_constraintStart_toStartOf="@+id/view2"
                    app:layout_constraintTop_toTopOf="@+id/view2" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>