<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:background="@drawable/selector2"
        android:padding="0dp">


        <TextView
            android:id="@+id/id_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/logo_img_res"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="-4dp"
            android:layout_toStartOf="@+id/name_res" />

        <TextView
            android:id="@+id/phone_number_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/divider"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/divider" />

        <TextView
            android:id="@+id/customer_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/textView12"
            android:text="Piotrkowska"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_apartment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_city"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/customer_street"
            android:text="12"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_postcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_city"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/customer_apartment_number"
            android:text="90-030"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_city"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@+id/textView12"
            android:text="huber.piatek.3@gmail.com"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_res"
            android:layout_alignEnd="@+id/divider2"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@id/apartment_number_res"
            android:gravity="center_horizontal|top"
            android:text="Saturday 28th of December 2019 01:57:16 PM"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/name_res" />

        <TextView
            android:id="@+id/name_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view3"
            android:layout_alignTop="@+id/view3"
            android:layout_alignEnd="@+id/view3"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="	 Huge;36;Margharita Huge;36;Margharita"
            android:textSize="21sp"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/view3" />

        <TextView
            android:id="@+id/street_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_res"
            android:layout_alignStart="@+id/view3"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|top"
            android:text="Order value: "
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/name_res" />

        <TextView
            android:id="@+id/apartment_number_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_res"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/street_res"
            android:gravity="center_horizontal|top"
            android:text="78,00zł"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/name_res" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/phone_number_res"
            android:text="Customer data: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/textView12"
            android:text="Hubert"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/customer_name"
            android:text="Piątek"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/customer_surname"
            android:text="Łódź"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_email"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/textView12"
            android:text="669497652"
            android:textSize="16sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <View
            android:id="@+id/divider2"
            android:layout_width="295dp"
            android:layout_height="2dp"
            android:layout_below="@+id/name_res"
            android:layout_alignStart="@+id/name_res"
            android:layout_alignEnd="@+id/view3"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/view3"
            app:layout_constraintVertical_bias="0.0" />

    </RelativeLayout>

</LinearLayout>